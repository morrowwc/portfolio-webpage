@model portfolio.Models.Project

@{
    ViewData["Title"] = "Details";
}

<h2>@Model.Name</h2>
<p>@Model.Description</p>
@if (Model.Images != null && Model.Images.Count > 0)
{
    <h3>Images</h3>
    @foreach (var image in Model.Images)
    {
        <img src="data:image;base64,@Convert.ToBase64String(image)" alt="Project Image" width="200" />
    }
}
<p>
    <a href="@Model.URL">Project Link</a>
</p>
<a href="@Url.Action("Index")" class="btn btn-primary">Back to List</a>
